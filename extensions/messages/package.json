{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "messages",
  "title": "Messages",
  "description": "Quickly send a message to one of your contacts.",
  "icon": "apple-messages-icon.png",
  "author": "thomaslombart",
  "contributors": [
    "timothy_gray",
    "ramsay"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "send-message",
      "title": "Send Message",
      "description": "Quickly send a message through the Messages app.",
      "mode": "view",
      "preferences": [
        {
          "type": "dropdown",
          "description": "Successful message feedback",
          "default": "toast",
          "data": [
            {
              "title": "HUD",
              "value": "hud"
            },
            {
              "title": "Inline toast",
              "value": "toast"
            }
          ],
          "title": "Successful message feedback",
          "name": "actionOnSendMessage",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.76.0",
    "@raycast/utils": "^1.16.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.11.6",
    "@types/react": "18.2.48",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
